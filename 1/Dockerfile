MAINTAINER Ondra Pelech <ondra.pelech@gmail.com>

RUN apt-get update
RUN apt-get upgrade -y
RUN cabal update

RUN which ghc && \
    ghc --version && \
    which cabal && \
    cabal --version && \
    ghc-pkg list

